<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.example.adimn.myapplication.ForgetPassword">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorPrimaryDark">
        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:paddingTop="3dp"
            android:src="@drawable/x"
            android:layout_marginLeft="15dp" />
        <TextView
            android:id="@+id/tv_farmer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FARMER"
            android:textStyle="bold"
            android:paddingLeft="5dp"
            android:textColor="#fff"
            android:textSize="15dp"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/resetpwdbgs">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="350dp"
            android:layout_margin="30dp"
            android:background="#1afcfbfb"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                android:text="RESET YOUR PASSWORD"
                android:textColor="#fff"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_receiveotp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter your registered mobile number below and click on submit to receive OTP."
                android:textColor="#fcf8f8"
                android:textSize="16dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="290dp"
                android:layout_height="40dp"
                android:layout_marginVertical="20dp"
                android:background="@drawable/rect1"
                android:hint="Mobile Number"
                android:inputType="numberDecimal"
                android:paddingLeft="25dp"
                android:textSize="15dp"
                android:textAlignment="center"
                android:textColorHint="#000" />

            <Button
                android:id="@+id/bt_submit"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginVertical="10dp"
                android:background="@drawable/btn1"
                android:text="Submit"
                android:textColor="#fff"
                android:textSize="15dp" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
