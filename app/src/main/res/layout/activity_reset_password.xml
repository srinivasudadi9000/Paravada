<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.example.adimn.myapplication.ResetPassword">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorPrimaryDark">
        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/back"
            android:paddingBottom="5dp"
            android:layout_marginLeft="15dp" />
        <TextView
            android:id="@+id/tv_farmer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FARMER"
            android:textStyle="bold"
            android:paddingLeft="5dp"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="15dp"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/resetpwdbgs">
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_margin="35dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="#1afcfbfb">
            <TextView
                android:id="@+id/tv_reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RESET YOUR PASSWORD"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#fcf9f9"
                android:layout_marginVertical="30dp"/>
            <TextView
                android:id="@+id/tv_newpassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter New Password"
                android:textSize="15dp"
                android:textColor="#fcf8f8"
                android:layout_marginRight="70dp"/>
            <EditText
                android:id="@+id/et_newpassword"
                android:layout_width="290dp"
                android:layout_height="50dp"
                android:background="@drawable/rect1"
                android:inputType="textPassword"
                android:paddingLeft="25dp"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/tv_reenter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Re-Enter New Password"
                android:paddingTop="10dp"
                android:textSize="15dp"
                android:layout_marginRight="60dp"
                android:textColor="#fcf8f8"/>
            <EditText
                android:id="@+id/et_confirmpassword"
                android:layout_width="290dp"
                android:layout_height="50dp"
                android:background="@drawable/rect1"
                android:inputType="textPassword"
                android:paddingLeft="25dp"
                android:textAlignment="center"/>
            <Button
                android:id="@+id/bt_Confirm"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginVertical="20dp"
                android:background="@drawable/btn1"
                android:text="Confirm"
                android:textColor="#fff"
                android:textSize="15dp" />

        </LinearLayout>


    </RelativeLayout>
</LinearLayout>
