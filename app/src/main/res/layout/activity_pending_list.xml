<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.adimn.myapplication.PendingListActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@color/colorPrimaryDark">
        <ImageView
            android:id="@+id/img_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="15dp"
            android:paddingTop="5dp"
            android:src="@drawable/back"/>
        <TextView
            android:id="@+id/tv_pending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pending Orders"
            android:textStyle="bold"
            android:paddingTop="5dp"
            android:textColor="#fff"
            android:paddingLeft="5dp"
            android:paddingRight="180dp"
            android:textSize="15dp" />
       <!-- <ImageView
            android:id="@+id/img_logo1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:paddingTop="7dp"
            android:src="@drawable/notifications"/>-->
        <!--<ImageView
            android:id="@+id/img_logo2"
            android:layout_width="40dp"
            android:layout_marginVertical="5dp"
            android:layout_height="40dp"
            android:src="@drawable/lines"/>-->
    </LinearLayout>
    <ListView
        android:id="@+id/listView_pending"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/dashboardbg"/>
</LinearLayout>
