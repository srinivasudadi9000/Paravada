<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.example.adimn.myapplication.Otp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorPrimaryDark">
        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:paddingBottom="3dp"
            android:src="@drawable/back"
            android:layout_marginLeft="15dp" />
        <TextView
            android:id="@+id/tv_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CREATE ACCOUNT"
            android:textStyle="bold"
            android:paddingLeft="5dp"
            android:textColor="#fff"
            android:textSize="15dp"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/resetpwdbgs">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="#1afcfbfb">
            <ImageView
                android:id="@+id/img_logo1"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/log"/>
            <TextView
                android:id="@+id/tv_otp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="One Time Password has been sent to your mobile number."
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="#fcf9f9" />
            <EditText
                android:id="@+id/et_otp_verify"
                android:layout_width="290dp"
                android:layout_height="50dp"
                android:hint="Please enter OTP"
                android:textColorHint="#000"
                android:background="@drawable/rect1"
                android:inputType="numberDecimal"
                android:paddingLeft="25dp"
                android:layout_marginVertical="10dp"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_resend"
                android:text="Resend Otp"
                android:textStyle="bold"
                android:textColor="#fff"
                android:textSize="20dp"/>
            <Button
                android:id="@+id/bt_confirmed"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginVertical="20dp"
                android:background="@drawable/btn1"
                android:text="Next"
                android:textColor="#fff"
                android:textSize="20dp" />

        </LinearLayout>


    </RelativeLayout>



</LinearLayout>
