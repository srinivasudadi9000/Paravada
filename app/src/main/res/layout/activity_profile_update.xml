<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:id="@+id/ll_profileview"
    tools:context="com.example.adimn.myapplication.ProfileUpdate">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@color/colorPrimaryDark">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="25dp"
            android:layout_height="29dp"
            android:layout_marginLeft="15dp"
            android:paddingTop="5dp"
            android:src="@drawable/back" />
        <TextView
            android:id="@+id/tv_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VIEW PROFILE "
            android:textStyle="bold"
            android:textColor="#fff"
            android:paddingTop="7dp"
            android:paddingLeft="90dp"
            android:textSize="15dp"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">
    <LinearLayout
        android:id="@+id/ll_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:background="@drawable/pofilebg">
        <ImageView
            android:id="@+id/img_photo"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="100dp"
            android:src="@drawable/farmers"/>
       <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Farmer Name"
                android:textColorHint="#000"
                android:textSize="20dp"
                android:gravity="start"
                android:textStyle="bold"
                android:layout_margin="5dp"/>
           <TextView
               android:id="@+id/tv_logout"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Logout "
               android:textStyle="bold"
               android:textAlignment="center"
               android:textColor="#000"
               android:layout_marginVertical="5dp"
               android:paddingLeft="140dp"
               android:textSize="20dp"/>

        </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="5dp">
            <TextView
                android:id="@+id/tv_information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Primary Information"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/colorPrimary"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp">
                <ImageView
                    android:id="@+id/img_logo4"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:padding="6dp"
                    android:src="@drawable/mobile" />
                <TextView
                    android:id="@+id/tv_mobileno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:hint="Mobile Number"
                    android:textColorHint="#000"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp">
                <ImageView
                    android:id="@+id/img_logo5"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:padding="5dp"
                    android:src="@drawable/email" />
                <TextView
                    android:id="@+id/tv_email"
                    android:inputType="textEmailAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="15dp"
                    android:hint="E-Mail"
                    android:textColorHint="#000"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="5dp">
            <TextView
                android:id="@+id/tv_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/colorPrimary"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp">
                <ImageView
                    android:id="@+id/img_logo6"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:padding="4dp"
                    android:src="@drawable/location"/>
                <TextView
                    android:id="@+id/tv_village"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="village"
                    android:paddingTop="20dp"
                    android:textColorHint="#000"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_mandal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Mandal"
                    android:layout_marginVertical="5dp"
                    android:textColorHint="#000"/>
                <TextView
                    android:id="@+id/tv_dist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="district"
                    android:layout_marginVertical="5dp"
                    android:textColorHint="#000"/>
                <TextView
                    android:id="@+id/tv_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="state"
                    android:layout_marginVertical="5dp"
                    android:textColorHint="#000"/>
                <TextView
                    android:id="@+id/tv_pincode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="pincode"
                    android:textColorHint="#000"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>