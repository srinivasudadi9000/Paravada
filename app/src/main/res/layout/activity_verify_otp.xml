<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.example.adimn.myapplication.VerifyOtp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorPrimaryDark">
        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:src="@drawable/back"
            android:layout_marginHorizontal="10dp" />
        <TextView
            android:id="@+id/tv_farmer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FARMER"
            android:textStyle="bold"
            android:textColor="#fff"
            android:paddingBottom="1dp"
            android:paddingLeft="5dp"
            android:textSize="15dp"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/resetpwdbgs">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="350dp"
            android:layout_margin="30dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="#1afcfbfb">
            <TextView
                android:id="@+id/tv_reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RESET YOUR PASSWORD"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#fff"
                android:layout_marginVertical="20dp"/>
            <TextView
                android:id="@+id/tv_otp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="One Time Password has been sent to your registered mobile number. Please enter same here to reset your password."
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="#fffefe" />
            <EditText
                android:id="@+id/et_otp"
                android:layout_width="290dp"
                android:layout_height="50dp"
                android:hint="Please enter OTP"
                android:textColorHint="#000"
                android:background="@drawable/rect1"
                android:inputType="numberDecimal"
                android:paddingLeft="25dp"
                android:layout_marginVertical="20dp"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_resend"
                android:text="Resend Otp"
                android:textStyle="bold"
                android:textColor="#fff"
                android:textSize="15dp"/>
            <Button
                android:id="@+id/bt_Confirm"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginVertical="10dp"
                android:background="@drawable/btn1"
                android:text="Confirm"
                android:textColor="#fff"
                android:textSize="15dp" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
