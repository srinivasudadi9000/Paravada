<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context="com.example.adimn.myapplication.AddProducts">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@color/colorPrimaryDark">
        <ImageView
            android:id="@+id/img_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/back"/>
        <TextView
            android:id="@+id/tv_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADD PRODUCT"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:textSize="15dp" />
        <TextView
            android:id="@+id/tv_addproduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ADD"
            android:paddingLeft="180dp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="15dp"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dashboardbg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_browse"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/cam" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:background="@drawable/rect3">
                <Spinner
                    android:id="@+id/spinner_category"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:background="@drawable/rect3">

                <Spinner
                    android:id="@+id/spinner_subcategory"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"></Spinner>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp">

                <EditText
                    android:id="@+id/et_quantity"
                    android:layout_width="160dp"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="10dp"
                    android:inputType="number"
                    android:background="@drawable/rect3"
                    android:hint="Enter Quantity"
                    android:paddingLeft="5dp"
                    android:textColorHint="#000" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:background="@drawable/rect3">

                    <Spinner
                        android:id="@+id/spinner_units"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"></Spinner>
                </LinearLayout>
            </LinearLayout>

            <EditText
                android:id="@+id/et_price"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:background="@drawable/rect3"
                android:hint="Price"
                android:inputType="number"
                android:paddingLeft="5dp"
                android:textColorHint="#000" />

            <EditText
                android:id="@+id/et_description"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:background="@drawable/rect4"
                android:hint="Description"
                android:paddingLeft="5dp"
                android:textColorHint="#000" />
        </LinearLayout>
    </RelativeLayout>
    </ScrollView>
</LinearLayout>

