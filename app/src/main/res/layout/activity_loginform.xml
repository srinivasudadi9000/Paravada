<?xml version="1.0" encoding="utf-8"?>
  <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    tools:context="com.example.adimn.myapplication.LoginForm">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorPrimaryDark">
        <TextView
            android:id="@+id/tv_farmer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FARMER"
            android:textStyle="bold"
            android:paddingLeft="15dp"
            android:textColor="#fff"
            android:textSize="15dp"/>
    </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="350dp"
                        android:orientation="vertical"
                        android:gravity="center"
                       android:background="@drawable/logon3"
                        >
                    <ImageView
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:background="@drawable/rect1"

                        android:layout_marginVertical="10dp"
                        >
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="50dp"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:src="@drawable/user1"
                            />
                        <!--android:background="#80645b5b"-->
                        <EditText
                            android:id="@+id/et_phone"
                            android:layout_width="290dp"
                            android:layout_height="50dp"
                            android:hint="Mobile No"
                            android:textColorHint="#000"
                            android:inputType="numberDecimal"
                            android:paddingLeft="25dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:paddingRight="4dp"
                        android:background="@drawable/rect1"
                        android:layout_marginVertical="10dp">
                        <ImageView
                            android:id="@+id/img_logo3"
                            android:layout_width="40dp"
                            android:layout_height="50dp"
                            android:src="@drawable/key"
                            android:paddingTop="5dp"
                            android:paddingBottom="7dp"
                            android:paddingLeft="9dp"
                            android:paddingRight="8dp"
                            />
                        <EditText
                            android:id="@+id/et_password"
                            android:layout_width="290dp"
                            android:layout_height="50dp"
                            android:hint="Password"
                            android:textColorHint="#000"
                            android:paddingLeft="30dp"
                            android:inputType="textPassword"/>
                    </LinearLayout>
                    </LinearLayout>
                    <Button
                        android:id="@+id/bt_login"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:layout_marginVertical="10dp"
                        android:background="@drawable/btn"
                        android:text="Login"
                        android:textColor="#fff"
                        android:textSize="20dp" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/img_logo5"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"

                            android:paddingTop="15dp"
                            android:src="@drawable/forgotpwd"/>
                    <TextView
                        android:id="@+id/tv_forgot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tv_already"
                        android:text="Forgot your password"
                        android:textSize="15dp"
                        android:textColor="#0bbe1a"
                        android:layout_marginRight="35dp"
                        android:textStyle="bold"
                        android:layout_marginVertical="18dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="80dp">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:paddingLeft="8dp"
                            android:paddingTop="15dp"
                            android:paddingRight="8dp"
                            android:src="@drawable/adduserred" />
                        <TextView
                            android:id="@+id/tv_signup"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/tv_already"
                            android:text="Don't have account?Register here"
                            android:textSize="15dp"
                            android:textColor="#0bbe1a"
                            android:layout_marginVertical="10dp"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>


