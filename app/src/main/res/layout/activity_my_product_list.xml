<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context="com.example.adimn.myapplication.MyproductListActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:background="@color/colorPrimaryDark">
        <ImageView
            android:id="@+id/img_back"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:src="@drawable/back"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:id="@+id/tv_myproduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MY PRODUCT"
            android:textStyle="bold"
            android:paddingTop="5dp"
            android:paddingRight="200dp"
            android:paddingLeft="5dp"
            android:textColor="#fff"
            android:textSize="15dp"/>
        <!--<ImageView
            android:id="@+id/img_logo1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:paddingTop="5dp"
            android:src="@drawable/notifications"/>-->
        <!--<ImageView
            android:id="@+id/img_logo2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/lines"
            android:layout_marginVertical="5dp"/>-->
    </LinearLayout>
    <ListView
        android:background="@drawable/dashboardbg"
        android:id="@+id/list_products"
        android:layout_width="match_parent"
        android:layout_height="fill_parent" />
</LinearLayout>
