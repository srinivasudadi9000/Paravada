<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.example.adimn.myapplication.EditProduct">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/colorPrimaryDark">
        <ImageView
            android:id="@+id/img_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/back"
            android:paddingTop="5dp"/>
        <TextView
            android:id="@+id/tv_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EDIT PRODUCT"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="#fff"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingRight="170dp"
            android:textSize="15dp" />
       <TextView
           android:id="@+id/tv_update"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Update"
           android:textSize="15dp"
           android:textStyle="bold"
           android:textColor="#fff"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dashboardbg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_camera"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/cam" />

            <!--<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:background="@drawable/rect3">

                <Spinner
                    android:id="@+id/spinner1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:background="@drawable/rect3">

                <Spinner
                    android:id="@+id/spinner2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"></Spinner>
            </LinearLayout>
-->

            <TextView
                android:id="@+id/tv_category"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:background="@drawable/rect3"
                android:hint="Category"
                android:paddingLeft="15dp"
                android:textSize="15dp"
                android:paddingTop="15dp"
                android:textColorHint="#000"/>
            <TextView
                android:id="@+id/tv_subcategory"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:background="@drawable/rect3"
                android:hint="Subcategory"
                android:textSize="15dp"
                android:paddingTop="15dp"
                android:paddingLeft="15dp"
                android:textColorHint="#000" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp">

                <TextView
                    android:id="@+id/tv_quantity"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="10dp"
                    android:background="@drawable/rect3"
                    android:hint="Enter Quantity"
                    android:paddingLeft="15dp"
                    android:textSize="15dp"
                    android:paddingTop="15dp"
                    android:textColorHint="#000" />
                <!--<TextView
                    android:id="@+id/tv_units"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="10dp"
                    android:background="@drawable/rect3"
                    android:hint="Units"
                    android:paddingLeft="5dp"
                    android:textColorHint="#000" />-->

                <!--<LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:background="@drawable/rect3">

                    <Spinner
                        android:id="@+id/spinner3"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"></Spinner>
                </LinearLayout>-->
            </LinearLayout>

            <EditText
                android:id="@+id/et_price"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:background="@drawable/rect3"
                android:hint="Price"
                android:paddingLeft="15dp"
                android:textSize="15dp"
                android:textColorHint="#000" />

            <EditText
                android:id="@+id/et_description"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:background="@drawable/rect4"
                android:hint="Description"
                android:paddingLeft="5dp"
                android:textSize="15dp"
                android:textColorHint="#000" />
        </LinearLayout>
    </RelativeLayout>
    </ScrollView>
</LinearLayout>
